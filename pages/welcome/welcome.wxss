page{
  background-color: #b3d4db;
  height: 100%;
}

.container{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user-avatar{
  width: 200rpx;
  height: 200rpx;
  margin-top: 120rpx;
}

.user-name{
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 100rpx;
}

.moto{
  font-size: 22rpx;
  font-weight: bold;
  line-height: 80rpx;
  color: #405f80;
}

.moto-container{
  margin-top: 200rpx;
  border: 1px solid #405f80;
  height: 80rpx;
  width: 200rpx;
  text-align: center;
  border-radius: 5px;
}
